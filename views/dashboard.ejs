<!DOCTYPE html>
<html>
<head>
    <title>Dashboard</title>
    <style>
        body { font-family: sans-serif; }
        .container { max-width: 800px; margin: auto; padding: 20px; }
        .section { margin-bottom: 20px; }
        h1, h2 { color: #333; }
        a { text-decoration: none; color: #007bff; }
        a:hover { text-decoration: underline; }
        ul { list-style-type: none; padding: 0; }
        li { background: #f4f4f4; margin-bottom: 10px; padding: 10px; border-radius: 5px; }
        .button {
            background-color: #007bff;
            color: white;
            padding: 8px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        .button:hover { background-color: #0056b3; }
        .decline-button { background-color: #dc3545; }
        .decline-button:hover { background-color: #c82333; }
    </style>
</head>
<body>
    <div class="container">
        <h1>Welcome, <%= user.name %></h1>
        <p>Major: <%= user.major %></p>
        <a href="/profile">Edit Profile</a> |
        <a href="/courses">Manage Courses</a> |
        <a href="/availability">Set Availability</a> |
        <a href="/search">Search</a> |
        <a href="/sessions">View All Sessions</a> |
        <a href="/logout">Logout</a>

        <div class="section">
            <h2>Upcoming Sessions</h2>
            <% if ((upcomingSessions || []).length === 0) { %>
                <p>No upcoming sessions.</p>
            <% } else { %>
                <ul>
                    <% upcomingSessions.forEach(s => {
                        const otherUser = users.find(u => u.id === (s.fromUserId === user.id ? s.toUserId : s.fromUserId));
                    %>
                        <li>
                            With: <%= otherUser ? otherUser.name : 'Unknown' %> |
                            Course: <%= s.course %> |
                            Time: <%= s.timeSlot %>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </div>

        <div class="section">
            <h2>Suggested Matches</h2>
            <% if ((suggestedMatches || []).length === 0) { %>
                <p>No suggested matches right now. Add more courses or availability to get suggestions.</p>
            <% } else { %>
                <ul>
                    <% suggestedMatches.forEach(match => { %>
                        <li>
                            <strong><%= match.name %></strong> (<%= match.major %>)<br>
                            Mutual Courses: <%= match.mutualCourses.join(', ') %><br>
                            Overlapping Times: <%= match.overlappingAvailability.join(', ') %>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </div>

        <div class="section">
            <h2>Incoming Session Requests</h2>
            <% if ((incomingRequests || []).length === 0) { %>
                <p>No incoming requests.</p>
            <% } else { %>
                <ul>
                    <% incomingRequests.forEach(r => { const from = users.find(u => u.id === r.fromUserId); %>
                        <li>
                            From: <%= from ? from.name : 'Unknown' %> | Course: <%= r.course %> | Time: <%= r.timeSlot %>
                            <form method="POST" action="/requests/<%= r.id %>/accept" style="display:inline;">
                                <button type="submit" class="button">Accept</button>
                            </form>
                            <form method="POST" action="/requests/<%= r.id %>/decline" style="display:inline;">
                                <button type="submit" class="button decline-button">Decline</button>
                            </form>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </div>

        <div class="section">
            <h2>Outgoing Session Requests</h2>
            <% if ((outgoingRequests || []).length === 0) { %>
                <p>No outgoing requests.</p>
            <% } else { %>
                <ul>
                    <% outgoingRequests.forEach(r => { const to = users.find(u => u.id === r.toUserId); %>
                        <li>
                            To: <%= to ? to.name : 'Unknown' %> | Course: <%= r.course %> | Time: <%= r.timeSlot %> | Status: <%= r.status %>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </div>
    </div>
</body>
</html>
