<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Set Availability</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .calendar-grid {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 5px;
        }
        .calendar-day {
            border: 1px solid #ddd;
            padding: 10px;
        }
        .time-slot {
            margin: 2px 0;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1>Set Your Weekly Availability</h1>
        <form action="/availability" method="POST">
            <div class="calendar-grid">
                <% const days = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday']; %>
                <% days.forEach(day => { %>
                    <div class="calendar-day">
                        <h5><%= day %></h5>
                        <% for(let hour = 8; hour < 22; hour++) { %>
                            <% const timeSlot = `${day}-${hour}:00`; %>
                            <div class="form-check time-slot">
                                <input class="form-check-input" type="checkbox" name="availability" value="<%= timeSlot %>"
                                    <% if (user.availability && user.availability.includes(timeSlot)) { %>checked<% } %>>
                                <label class="form-check-label">
                                    <%= hour %>:00 - <%= hour + 1 %>:00
                                </label>
                            </div>
                        <% } %>
                    </div>
                <% }); %>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Save Availability</button>
        </form>
    </div>
</body>
</html>
