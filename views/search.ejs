<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search for Classmates</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <a href="/dashboard">Back to Dashboard</a>

        <h1>Search for Classmates</h1>
        <form action="/search" method="POST">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="course">Course</label>
                    <input type="text" class="form-control" id="course" name="course" placeholder="e.g., CPSC 2120" value="<%= (filters && filters.course) || '' %>">
                </div>
                <div class="form-group col-md-4">
                    <label for="major">Major</label>
                    <input type="text" class="form-control" id="major" name="major" placeholder="e.g., Computer Science" value="<%= (filters && filters.major) || '' %>">
                </div>
            </div>

            <div class="form-group">
                <label>Filter by Overlapping Availability</label>
                <div class="row">
                    <% const days = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday']; %>
                    <% days.forEach(day => { %>
                        <div class="col-md-3">
                            <strong><%= day %></strong>
                            <% for (let hour = 8; hour < 22; hour++) { %>
                                <% const timeSlot = `${day}-${hour}:00`; %>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="availabilityFilter" value="<%= timeSlot %>"
                                        <% if (filters && Array.isArray(filters.availability) && filters.availability.includes(timeSlot)) { %>checked<% } %>>
                                    <label class="form-check-label"><%= hour %>:00</label>
                                </div>
                            <% } %>
                        </div>
                    <% }); %>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
        </form>

        <% if (typeof results !== 'undefined') { %>
            <h2 class="mt-5">Search Results</h2>
            <% if (results.length > 0) { %>
                <ul class="list-group">
                    <% results.forEach(item => { %>
                        <li class="list-group-item">
                            <div>
                                <strong><%= item.name %></strong> (<%= item.username %>) - <em><%= item.major %></em>
                            </div>
                            <div>
                                Shared courses: <%= item.sharedCourses.join(', ') || 'None' %>
                            </div>
                            <div>
                                Overlapping availability: <%= item.overlapAvailability.join(', ') || 'None' %>
                            </div>
                            <div class="mt-2">
                                <form action="/send-request" method="POST" class="form-inline">
                                    <input type="hidden" name="recipientId" value="<%= item.id %>">
                                    <div class="form-group mr-2">
                                        <label class="mr-2">Course</label>
                                        <select name="course" class="form-control form-control-sm">
                                            <% (item.sharedCourses || []).forEach(c => { %>
                                                <option value="<%= c %>"><%= c %></option>
                                            <% }) %>
                                        </select>
                                    </div>
                                    <div class="form-group mr-2">
                                        <label class="mr-2">Time</label>
                                        <select name="timeSlot" class="form-control form-control-sm">
                                            <% (item.overlapAvailability || []).forEach(t => { %>
                                                <option value="<%= t %>"><%= t %></option>
                                            <% }) %>
                                        </select>
                                    </div>
                                    <button type="submit" class="btn btn-sm btn-success" <%= (item.sharedCourses.length && item.overlapAvailability.length) ? '' : 'disabled' %>>Send Request</button>
                                </form>
                            </div>
                        </li>
                    <% }); %>
                </ul>
            <% } else { %>
                <p>No students found for this course.</p>
            <% } %>
        <% } %>
    </div>
</body>
</html>
