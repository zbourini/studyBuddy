<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search for Classmates</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1>Search for Classmates</h1>
        <form action="/search" method="POST">
            <div class="form-group">
                <label for="course">Search by Course:</label>
                <input type="text" class="form-control" id="course" name="course" placeholder="Enter course name (e.g., CPSC 2120)">
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
        </form>

        <% if (typeof results !== 'undefined') { %>
            <h2 class="mt-5">Search Results</h2>
            <% if (results.length > 0) { %>
                <ul class="list-group">
                    <% results.forEach(item => { %>
                        <li class="list-group-item">
                            <div>
                                <strong><%= item.name %></strong> (<%= item.username %>)
                            </div>
                            <div>
                                Shared courses: <%= item.sharedCourses.join(', ') || 'None' %>
                            </div>
                            <div>
                                Overlapping availability: <%= item.overlapAvailability.join(', ') || 'None' %>
                            </div>
                            <div class="mt-2">
                                <form action="/send-request" method="POST" class="form-inline">
                                    <input type="hidden" name="recipientId" value="<%= item.id %>">
                                    <div class="form-group mr-2">
                                        <label class="mr-2">Course</label>
                                        <select name="course" class="form-control form-control-sm">
                                            <% (item.sharedCourses || []).forEach(c => { %>
                                                <option value="<%= c %>"><%= c %></option>
                                            <% }) %>
                                        </select>
                                    </div>
                                    <div class="form-group mr-2">
                                        <label class="mr-2">Time</label>
                                        <select name="timeSlot" class="form-control form-control-sm">
                                            <% (item.overlapAvailability || []).forEach(t => { %>
                                                <option value="<%= t %>"><%= t %></option>
                                            <% }) %>
                                        </select>
                                    </div>
                                    <button type="submit" class="btn btn-sm btn-success" <%= (item.sharedCourses.length && item.overlapAvailability.length) ? '' : 'disabled' %>>Send Request</button>
                                </form>
                            </div>
                        </li>
                    <% }); %>
                </ul>
            <% } else { %>
                <p>No students found for this course.</p>
            <% } %>
        <% } %>
    </div>
</body>
</html>
